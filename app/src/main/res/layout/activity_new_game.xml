<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abugelap"
    tools:context=".NewGame">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameAtas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/amiko_semibold"
                android:text="Math Game"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                tools:ignore="MissingConstraints" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameBawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/btn_bg"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOpsiA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_game"
                    android:drawableTop="@drawable/ic_check"
                    android:onClick="buttonPressed"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="99"
                    android:textColor="@drawable/btn_pressed"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnOpsiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_game"
                    android:drawableTop="@drawable/ic_check"
                    android:onClick="buttonPressed"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="99"
                    android:textColor="@drawable/btn_pressed"
                    android:textSize="34sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="250dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnOpsiC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_game"
                    android:drawableTop="@drawable/ic_check"
                    android:onClick="buttonPressed"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="99"
                    android:textColor="@drawable/btn_pressed"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/btnOpsiD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_game"
                    android:drawableTop="@drawable/ic_check"
                    android:onClick="buttonPressed"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="99"
                    android:textColor="@drawable/btn_pressed"
                    android:textSize="34sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/betulSalahView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="410dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check" />
</androidx.constraintlayout.widget.ConstraintLayout>